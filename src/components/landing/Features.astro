---
import data from '../../config/features.json';
---

<h1 class="text-center font-bold text-5xl mt-10">Features</h1>
<div class="grid md:grid-cols-3 p-4 gap-4 mt-10">
    {
        data.map(({title, description}) =>(
            <div class="bg-slate-800 p-10 rounded-xl hover:bg-slate-600">
                <h2 class="text-2xl font-bold my-4">{title}</h2>
                <p>{description}</p>
            </div>
        ))
    }
</div>