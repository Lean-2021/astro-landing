---
import projects from '../../config/projects.json';
---
<section class="p-4 mt-10">
    <h2 class="font-bold text-center text-5xl my-5 mb-20">Projects</h2>

    {
        projects.map(({title, description, image})=>(
            <div class="flex flex-col mt-5 md:flex-row text-center md:text-left">
                <div class="flex-1">
                    <h2 class="font-bold text-2xl my-4 text-violet-400">{title}</h2>
                    <p class="text-xl">{description}</p>
                    <button class="bg-violet-500 px-4 py-3 font-bold rounded mt-7 md:mt-2 hover:bg-violet-700">
                        More Info
                    </button>
                </div>
                <div class="mt-10 md:mt-0">
                    <img src={image} alt={title} class="w-72 m-auto md:ml-72">
                </div>
            </div>
        ))
    }
</section>


